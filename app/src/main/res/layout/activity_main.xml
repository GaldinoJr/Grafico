<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.galdino.exemplografico.MainActivity"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_label_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/resumo"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_vector_close_blue"
            android:padding="15dp"
            />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@android:color/white"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_month"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_chart"
            />
        <TextView
            android:id="@+id/tv_label_total"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_month"
            android:text="Resumo"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_data_month"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_total"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</layout>
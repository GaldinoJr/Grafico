<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.galdino.exemplografico.fragment.FinancialGraphFragment"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_label_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_items_graph_screen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/summary"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="@dimen/height_items_graph_screen"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:srcCompat="@drawable/ic_vector_close_blue"
            android:padding="12dp"
            />

        <RelativeLayout
            android:id="@+id/rl_graph"
            android:layout_width="0dp"
            android:layout_height="170dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@android:color/white">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:focusable="true" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_month"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_items_graph_screen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_graph"
            />
        <TextView
            android:id="@+id/tv_month_selected"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_items_graph_screen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_month"
            tools:text="Novembro"
            android:textAllCaps="true"
            android:textColor="@color/colorBlueLightGraph"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            android:background="@color/gray_light"/>

        <TextView
            android:id="@+id/tv_label_total"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_items_graph_screen"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_month_selected"
            android:text="@string/enter_total"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_default2x"
            android:layout_marginStart="@dimen/margin_default2x" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_items_graph_screen"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_month_selected"
            tools:text="205.000"
            android:textColor="@color/colorBlueLightGraph"
            android:gravity="center"
            android:textSize="@dimen/text_size_default3x"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/margin_default2x"
            android:layout_marginEnd="@dimen/margin_default2x" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_data_month"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_total"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</layout>